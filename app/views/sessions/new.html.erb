<h1>Login</h1>

<%= form_tag do %>
  <fieldset>
    <legend>Please login</legend>

    <div>
      <%= label_tag :username %>
      <%= text_field_tag :username, params[:username] %>
    </div>

    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <div>
      <%= submit_tag 'Login' %>
    </div>
  </fieldset>
<% end %>